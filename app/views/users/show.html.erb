<div class="row">
	<div class="col-md-8">
		<div class="media">
			<div class="media-body">
				<h2 class="media-heading">
					<%= @user.email %>
				</h2>
				<div>
					signed in <%= @user.sign_in_count %> times
				</div>
				<small>
					last sign in <%= time_ago_in_words(@user.last_sign_in_at) %> ago
				</small>
			</div>
			<div id='js-items'>
				<%= render @user.items %>
			</div>
			<h4>Add an Item</h4>
			<div>
				<%= render partial: 'items/form', locals: {item: Item.new, user: @user } %>
			</div>
		</div>
	</div>
</div>